generator client {
  provider = "prisma-client"
  output   = "./prisma/"
}

datasource db {
  provider = "postgresql"
}

enum EvaluationActivityType {
  EXAM
  QUIZZ
  TASK
  IMPROVEMENT_PLAN
}

enum EvaluationActivityStatus {
  DRAFT
  PUBLISHED
  INACTIVE
  DELETED
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  LONG_ANSWER
  CODE
  CANVAS
}

enum SubmissionStatus {
  IN_PROGRESS
  SUBMITTED
  GRADED
  INVALID
}

enum ActivityAssignmentType {
  STUDENT
  COHORT
}

model EvaluationActivity {
  id String @id @default(uuid())
  type EvaluationActivityType
  title String
  description String?
  instructorId String
  label ActivityLabel @relation(fields: [labelId], references: [id])
  labelId String
  startDate DateTime
  endDate DateTime
  maxScore Int
  passingScore Int
  settings Json
  status EvaluationActivityStatus
  createdAt DateTime @default(now())

  questions Question[]
  activityAssignments ActivityAssignment[]
  submissions Submission[]
  @@index([labelId])
  @@index([instructorId])
}

model ActivityLabel {
  id String @id @default(uuid())
  name String
  backgroundColor String?
  instructorId String
  activities EvaluationActivity[]
  createdAt DateTime @default(now())

  @@unique([name, instructorId])
}

model ActivityAssignment {
  id String @id @default(uuid())
  activityId String
  activity  EvaluationActivity @relation(fields: [activityId], references: [id])
  type ActivityAssignmentType
  cohortId  String
  studentId String?
}

model Question {
  id String @id @default(uuid())
  activityId String
  activity  EvaluationActivity @relation(fields: [activityId], references: [id])
  type QuestionType
  statement String
  score Int?
  order Int
  hint String?
  config Json
}

model Submission {
  id String @id @default(uuid())
  activityId String
  activity  EvaluationActivity @relation(fields: [activityId], references: [id])
  studentId String
  startedAt DateTime
  submittedAt DateTime?
  score Int?
  maxScore Int?
  status SubmissionStatus
  final Boolean @default(true)
  attempt Int @default(1)

  submissionItems SubmissionItem[]

  @@index([activityId, studentId])
  @@index([id])
}

model SubmissionItem {
  id String @id @default(uuid())
  submissionId String
  submission Submission @relation(fields: [submissionId], references: [id])
  questionId String?
  text String?
  json Json?
  fileUrl String?
  score Int?
  maxScore Int?

  @@index([submissionId])
}