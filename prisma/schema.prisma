generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum AssessmentType {
  EXAM
  QUIZZ
  TASK
  IMPROVEMENT_PLAN
}

enum AssessmentStatus {
  DRAFT
  PUBLISHED
  INACTIVE
  DELETED
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  LONG_ANSWER
  CODE
  CANVAS
}

enum SubmissionStatus {
  IN_PROGRESS
  SUBMITTED
  GRADED
  INVALID
}

enum AssessmentAssignmentType {
  STUDENT
  COHORT
}

enum AssessmentAssignmentStatus {
  ASSIGNED
  COMPLETED
  GRADED
  CANCELED
}

enum QuestionResourceType {
  TEXT
  IMAGE
  VIDEO
  CODE
  FILE
  LINK
}

model Assessment {
  id           String                   @id @default(uuid())
  type         AssessmentType
  title        String
  description  String?
  instructorId String
  labelId      String
  label        AssessmentLabel            @relation(fields: [labelId], references: [id])
  startDate    DateTime
  endDate      DateTime
  maxScore     Int
  settings     Json
  status       AssessmentStatus
  createdAt    DateTime                 @default(now())
  updatedAt    DateTime                 @updatedAt
  deletedAt    DateTime?

  questions           Question[]
  assessmentAssignments AssessmentAssignment[]
  submissions         Submission[]

  @@index([labelId])
  @@index([instructorId])
}

model AssessmentLabel {
  id              String               @id @default(uuid())
  name            String
  backgroundColor String?
  icon            String?
  iconCode        String?
  instructorId    String
  activities      Assessment[]

  @@unique([name, instructorId])
}

model AssessmentAssignment {
  id         String                   @id @default(uuid())
  activityId String
  activity   Assessment       @relation(fields: [activityId], references: [id])
  type       AssessmentAssignmentType
  cohortId   String
  studentId  String?
  status     AssessmentAssignmentStatus
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt
  deletedAt  DateTime?
}

model Question {
  id         String             @id @default(uuid())
  activityId String
  activity   Assessment @relation(fields: [activityId], references: [id])
  type       QuestionType
  statement  String
  score      Int                @default(0)
  order      Int
  hint       String?
  config     Json

  question QuestionResource[]

  @@index([activityId, order])
}

model QuestionResource {
  id          String               @id @default(uuid())
  title       String?
  description String?
  questionId  String
  question    Question             @relation(fields: [questionId], references: [id])
  type        QuestionResourceType
  content     Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([questionId])
}

model Submission {
  id          String             @id @default(uuid())
  activityId  String
  activity    Assessment @relation(fields: [activityId], references: [id])
  studentId   String
  startedAt   DateTime
  submittedAt DateTime?
  score       Int?
  maxScore    Int?
  status      SubmissionStatus
  final       Boolean            @default(true)
  attempt     Int                @default(1)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  submissionItems SubmissionItem[]

  @@index([activityId, studentId])
  @@index([id])
}

model SubmissionItem {
  id           String     @id @default(uuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  questionId   String?
  text         String?
  json         Json?
  fileUrl      String?
  score        Int?
  maxScore     Int?

  @@index([submissionId])
}
